---
import Map from '../components/Map.astro';
import PhotoCarousel from '../components/PhotoCarousel.astro';
import PhotoLoader from '../components/PhotoLoader.astro';
import RideStats from '../components/RideStats.astro';
import DayNavigation from '../components/DayNavigation.astro';

// Day information for title generation
const currentDay = 4;
const dayInfo = {
  1: { route: "San Francisco to Santa Cruz", date: "Fri, Sep 6, 2025" },
  2: { route: "Santa Cruz to Monterey", date: "Sat, Sep 7, 2025" },
  3: { route: "Monterey to Big Sur", date: "Sun, Sep 8, 2025" },
  4: { route: "Paso Robles to Cambria", date: "Mon, Sep 9, 2025" },
  5: { route: "Day 5 Route", date: "Tue, Sep 10, 2025" },
  6: { route: "Day 6 Route", date: "Wed, Sep 11, 2025" },
  7: { route: "Day 7 Route", date: "Thu, Sep 12, 2025" },
  8: { route: "Day 8 Route", date: "Fri, Sep 13, 2025" }
};

const currentDayInfo = dayInfo[currentDay];
const pageTitle = currentDayInfo
  ? `Day ${currentDay} - ${currentDayInfo.date} (${currentDayInfo.route})`
  : "CCC Fun Finders 2025";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>CCC Day 4 - Fun Finders 2025</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<DayNavigation currentDay={4} />
		<div class="container">
			<header class="hero">
				<h1>{pageTitle}</h1>
			</header>

			<main class="main-content">
				<RideStats />
				<section class="map-section">
					<Map />
				</section>
			</main>
		</div>

		<PhotoCarousel />
		<PhotoLoader />

		<!-- Day 4 specific configuration -->
		<script>
			window.dayConfig = {
				day: 4,
				gpxFile: '/gpx/CCC_Day_4_Paso_Robles_to_Cambria.gpx',
				photosDir: 'day 4',
				manifestPath: '/photos-manifest-day4.json'
			};
		</script>
	</body>
</html>

<style>
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		line-height: 1.6;
	}

	body {
		background: linear-gradient(rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.7)), url("/header_image.png"), rgba(22, 70, 57, 0.7);
background-size: 100% auto, 100% auto, 100% 100%;
background-position: center 120px, center 120px, center 0;
background-attachment: fixed;
		background-repeat: no-repeat;		min-height: 100vh;
		color: #333;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem;
	}

	.hero {
		text-align: center;
		color: #1f2937;
		margin-bottom: 0.25rem;
	}

	.hero h1 {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		color: #1f2937;
		text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
		background: rgba(255, 255, 255, 0.8);
		padding: 1rem 2rem;
		border-radius: 16px;
		display: inline-block;
		
		
	}

	.subtitle {
		font-size: 1.5rem;
		font-weight: 300;
		margin-bottom: 0.25rem;
		opacity: 0.9;
	}

	.description {
		font-size: 1.1rem;
		max-width: 600px;
		margin: 0 auto;
		opacity: 0.8;
		line-height: 1.8;
	}

	.main-content {
		background: transparent;
		border-radius: 20px;
		padding: 1rem;
		box-shadow: none;
		backdrop-filter: none;
	}

	.map-section {
		margin-bottom: 2rem;
	}

	@media (max-width: 768px) {
		.container {
			padding: 1rem;
		}

		.hero h1 {
			font-size: 1.2rem;
		}

		.subtitle {
			font-size: 1.2rem;
		}

		.description {
			font-size: 1rem;
		}

		.main-content {
			padding: 1rem;
			border-radius: 12px;
		}
	}
</style>