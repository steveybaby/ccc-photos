---
import Map from '../components/Map.astro';
import PhotoCarousel from '../components/PhotoCarousel.astro';
import PhotoLoader from '../components/PhotoLoader.astro';
import RideStats from '../components/RideStats.astro';
import DayNavigation from '../components/DayNavigation.astro';

// Day information for title generation
const currentDay = 8;
const dayInfo = {
  1: { route: "San Francisco to Santa Cruz", date: "Fri, Sep 6, 2025" },
  2: { route: "Santa Cruz to Monterey", date: "Sat, Sep 7, 2025" },
  3: { route: "Monterey to Big Sur", date: "Sun, Sep 8, 2025" },
  4: { route: "Paso Robles to Cambria", date: "Mon, Sep 9, 2025" },
  5: { route: "Cambria to Pismo Beach", date: "Tue, Sep 10, 2025" },
  6: { route: "Pismo Beach to Buellton", date: "Wed, Sep 11, 2025" },
  7: { route: "Buellton to Ventura", date: "Thu, Sep 12, 2025" },
  8: { route: "Ventura to Malibu", date: "Fri, Sep 13, 2025" }
};

const currentDayInfo = dayInfo[currentDay];
const pageTitle = currentDayInfo
  ? `Fun Finders - CCC Day ${currentDay} - ${currentDayInfo.date} (${currentDayInfo.route})`
  : "CCC Fun Finders 2025";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>CCC Day 8 - Fun Finders 2025</title>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<DayNavigation currentDay={8} />
		<div class="container">
			<header class="hero">
				<h1>{pageTitle}</h1>
			</header>

			<main class="main-content">
				<RideStats />
				<section class="map-section">
					<Map />
				</section>
			</main>
		</div>

		<PhotoCarousel />
		<PhotoLoader />

		<!-- Day 8 specific configuration -->
		<script>
			window.dayConfig = {
				day: 8,
				gpxFile: '/gpx/CCC_Day_8_Ventura_to_Malibu.gpx',
				photosDir: 'day 8',
				manifestPath: '/photos-manifest-day8.json'
			};
		</script>
	</body>
</html>

<style>
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		line-height: 1.6;
	}

	body {
		background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 50%, #2563eb 100%);
		min-height: 100vh;
		color: #333;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem;
	}

	.hero {
		text-align: center;
		color: white;
		margin-bottom: 3rem;
	}

	.hero h1 {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		background: linear-gradient(45deg, #fff, #f0f8ff);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.subtitle {
		font-size: 1.5rem;
		font-weight: 300;
		margin-bottom: 1rem;
		opacity: 0.9;
	}

	.description {
		font-size: 1.1rem;
		max-width: 600px;
		margin: 0 auto;
		opacity: 0.8;
		line-height: 1.8;
	}

	.main-content {
		background: rgba(255, 255, 255, 0.95);
		border-radius: 20px;
		padding: 2rem;
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(10px);
	}

	.map-section {
		margin-bottom: 2rem;
	}

	@media (max-width: 768px) {
		.container {
			padding: 1rem;
		}

		.hero h1 {
			font-size: 1.2rem;
		}

		.subtitle {
			font-size: 1.2rem;
		}

		.description {
			font-size: 1rem;
		}

		.main-content {
			padding: 1rem;
			border-radius: 12px;
		}
	}
</style>