---
// Navigation component for 8 days
const currentDay = Astro.props.currentDay || 1;
---

<nav class="day-navigation">
  <div class="nav-container">
    <div class="nav-title">CCC Fun Finders 2025</div>
    <div class="nav-days">
      {[1, 2, 3, 4, 5, 6, 7, 8].map(day => (
        <a
          href={day === 1 ? '/' : `/day${day}`}
          class={`day-link ${currentDay === day ? 'active' : ''} ${day > 3 ? 'coming-soon' : ''}`}
          title={day > 3 ? 'Coming Soon' : `Day ${day}`}
        >
          <span class="day-number">{day}</span>
          <span class="day-label">Day {day}</span>
          {day > 3 && <span class="coming-soon-badge">Soon</span>}
        </a>
      ))}
    </div>
  </div>
</nav>

<style>
  .day-navigation {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    position: sticky;
    top: 0;
    z-index: 100;
    margin-bottom: 2rem;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .nav-title {
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #667eea, #764ba2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-days {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .day-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    text-decoration: none;
    color: #666;
    background: rgba(255, 255, 255, 0.7);
    border: 2px solid transparent;
    transition: all 0.3s ease;
    position: relative;
    min-width: 60px;
  }

  .day-link:hover:not(.coming-soon) {
    background: rgba(102, 126, 234, 0.1);
    border-color: rgba(102, 126, 234, 0.3);
    transform: translateY(-2px);
  }

  .day-link.active {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border-color: rgba(255, 255, 255, 0.3);
  }

  .day-link.coming-soon {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  .day-number {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
  }

  .day-label {
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 0.25rem;
  }

  .coming-soon-badge {
    position: absolute;
    top: -6px;
    right: -6px;
    background: #f59e0b;
    color: white;
    font-size: 0.6rem;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
      flex-direction: column;
      gap: 1rem;
    }

    .nav-title {
      font-size: 1.2rem;
    }

    .nav-days {
      justify-content: center;
      gap: 0.25rem;
    }

    .day-link {
      padding: 0.5rem 0.75rem;
      min-width: 50px;
    }

    .day-number {
      font-size: 1.2rem;
    }

    .day-label {
      font-size: 0.65rem;
    }
  }

  @media (max-width: 480px) {
    .day-link {
      padding: 0.5rem;
      min-width: 45px;
    }

    .day-number {
      font-size: 1.1rem;
    }

    .day-label {
      font-size: 0.6rem;
    }
  }
</style>